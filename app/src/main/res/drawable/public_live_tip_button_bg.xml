<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp"/>
            <solid android:color="#d0d1d9"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp"/>
            <solid android:color="#e6f7f8fc"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp"/>
            <solid android:color="#e6f7f8fc"/>
        </shape>
    </item>
</selector>
